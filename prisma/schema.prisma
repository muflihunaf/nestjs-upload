generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  user_id              Int        @id @default(autoincrement())
  username             String
  email                String
  password             String
  documents            Document[]    // One-to-many relation with Document model
  shared_documents     Sharing[]    @relation("UserSharedDocuments") // One-to-many relation with Sharing model
  received_sharing     Sharing[]    @relation("UserReceivedSharing") // One-to-many relation with Sharing model
}

model Document {
  document_id       Int        @id @default(autoincrement())
  user              User       @relation(fields: [user_id], references: [user_id])
  user_id           Int
  title             String
  description       String
  file_path         String
  upload_date       DateTime
  shared_with       Sharing[]  // One-to-many relation with Sharing model
}

model Sharing {
  sharing_id            Int       @id @default(autoincrement())
  document              Document  @relation(fields: [document_id], references: [document_id])
  document_id           Int
  shared_with_user      User      @relation("UserReceivedSharing", fields: [shared_with_user_id], references: [user_id])
  shared_with_user_id   Int
  permission_level      String    // e.g., Read, Write
  shared_by_user        User      @relation("UserSharedDocuments", fields: [shared_by_user_id], references: [user_id])
  shared_by_user_id     Int
}
